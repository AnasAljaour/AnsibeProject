@using AnsibeProject.Models;
@model List<Professor>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="box-container">
    <div class="box">
        <a asp-controller="Professor" asp-action="Add" name="button0" class="inline-btn">add</a>
    </div>
    @if (Model != null && Model.Count() > 0)
    {
        @foreach (var professor in Model)
        {
           
                <div class="box">
                    <div class="info">
                        <h3>@professor.FullNameInArabic</h3>
                        <span>@professor.Speciality</span>
                    </div>
                    <table class="table table-striped">
                        <tr>
                            <td>
                                @professor.DateOfBirth
                            </td>
                            <td>
                                File Number : @professor.FileNumber
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @professor.Email
                            </td>
                            <td>
                                @professor.PhoneNumber
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Contract Type : 
                            </td>
                        </tr>

                    </table>
                    <a asp-route-FileNumber="@professor.FileNumber" class="btn btn-primary"
                       asp-controller="ProfessorController" asp-action="Edit">Edit</a>
                    <a asp-route-FileNumber="@professor.FileNumber" class="btn btn-danger"
                   asp-controller="ProfessorController" asp-action="deleteProfessor(@professor.FileNumber)">Delete</a>


                </div>
            

        }
    }

</div>
@section Scripts {
    <script>
        function showAlert() {
            Swal.fire({
                title: "Do you want to save the changes?",
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: "Save",
                denyButtonText: Don't save
                        }).then((result) => {
                    /* Read more about isConfirmed, isDenied below */
                    if (result.isConfirmed) {
                        Swal.fire("Saved!", "", "success");
                    } else if (result.isDenied) {
                        Swal.fire("Changes are not saved", "", "info");
                    }
                });
        }
    </script>
}
