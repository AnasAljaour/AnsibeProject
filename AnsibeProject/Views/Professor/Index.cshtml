@using AnsibeProject.Models;
@model List<Professor>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="box-container">
    <div class="box">
        <a asp-controller="Professor" asp-action="Add" name="button" class="inline-btn">add</a>
    </div>
    

    @if (Model != null && Model.Count() > 0)
    {
        @foreach (var professor in Model)
        {
            @if (professor.ActiveState.Equals(ActiveState.Active))
            {
                <div class="box">
                    <div class="info">
                    <h3>@professor.FullNameInArabic</h3>
                    <span>@professor.Speciality</span>
                </div>
                <table class="table table-striped">
                    <tr>
                        <td>
                            @professor.DateOfBirth
                        </td>
                        <td>
                            File Number : @professor.FileNumber
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @professor.Email
                        </td>
                        <td>
                            @professor.PhoneNumber
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Contract Type : @professor.Contract.ContractType
                        </td>
                        <td>
                            Maximum Hours : @professor.Contract.MaxHours
                        </td>
                        <td>
                            Minimum Hours : @professor.Contract.MinHours
                        </td>
                        <tr>
                            Rank : @professor.Rank
                        </tr>
                    </tr>

                </table>
                <a asp-route-FileNumber="@professor.FileNumber" class="inline-btn"
                   asp-controller="Professor" asp-action="Edit">Edit</a>
                <a class="inline-btn" id="toggle-btn" asp-controller="Professor" asp-action="ChangeState" asp-route-FileNumber="@professor.FileNumber" 
                asp-route-CourseState=@ActiveState.NotActive onclick="toggleState('@professor.FileNumber')">disabled</a>
                <a class="inline-btn"
                   onclick="showAlert('@professor.FileNumber')">Delete</a>


                </div>
            }
            else
            {
                <div class="box unactive">
                    <div class="info">
                    <h3>@professor.FullNameInArabic</h3>
                    <span>@professor.Speciality</span>
                </div>
                <table class="table table-striped">
                    <tr>
                        <td>
                            @professor.DateOfBirth
                        </td>
                        <td>
                            File Number : @professor.FileNumber
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @professor.Email
                        </td>
                        <td>
                            @professor.PhoneNumber
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Contract Type : @professor.Contract.ContractType
                        </td>
                        <td>
                            Maximum Hours : @professor.Contract.MaxHours
                        </td>
                        <td>
                            Minimum Hours : @professor.Contract.MinHours
                        </td>
                        <tr>
                            Rank : @professor.Rank
                        </tr>
                    </tr>

                </table>
                <a asp-route-FileNumber="@professor.FileNumber" class="inline-btn"
                   asp-controller="Professor" asp-action="Edit">Edit</a>
                    <a class="inline-btn" id="toggle-btn" asp-controller="Professor" asp-action="ChangeState"
                    asp-route-FileNumber="@professor.FileNumber" asp-route-FileNumber=@ActiveState.Active 
                    onclick="toggleState('@professor.FileNumber')">abled</a>
                <a class="inline-btn"
                   onclick="showAlert('@professor.FileNumber')">Delete</a>


                </div>
            }

        }
    }

</div>
@section Scripts {
    <script>
        function toggleState(FileNumber) {
            let body = document.getElementById(FileNumber);
            body.classList.toggle('unactive');
        }
        function showAlert(FileNumber) {
            Swal.fire({
                title: "Are you sure you want to delete this course?",
                text: "This action cannot be undone.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    // If user confirms, perform the delete action

                    window.location.href = "Professor/Delete?FileNumber=" + FileNumber;
                } else {
                    // If user cancels, show an informational message
                    Swal.fire("Deletion cancelled", "", "info");
                }
            });
        }
    </script>
}
