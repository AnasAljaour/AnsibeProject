@using AnsibeProject.Models;
@model Ansibe;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers 
<section class="courses">
    <div class="box-container">
        <a class="inline-btn" asp-action="CreateAnsibe" asp-controller="Home">Create Ansibe</a>
    </div>
    <div class="box-container">
    @if (Model != null)
    {
        
            if (Model.Sections.Count() > 0)
            {

                <div class="box">
                <h3>Year - ID : @Model.Year - @Model.Id</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Course Code</th>
                            <th>Professore File Number</th>
                            <th>Professor Name</th>
                            <th>TP</th>
                            <th>TD</th>
                            <th>Course</th>
                            <th>Language</th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach(Section s in Model.Sections)
                            {
                                <tr>
                                    <td>@s.Course.CourseCode</td>
                                    <td>@s.Professor.FileNumber</td>
                                    <td>@s.Professor.FirstName  @s.Professor.MiddleName @s.Professor.LastName</td>
                                    <td>@s.TP</td>
                                    <td>@s.TD</td>
                                    <td>@s.CourseHours</td>
                                    <td>@s.Language</td>
                                </tr>
                            }
                    </tbody>
                </table>
                    </div>
            }
        }
    

    </div>
</section>