@using AnsibeProject.Models;
@model List<Course>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@if (Model != null && Model.Count() > 0)
{       <section class="courses">

    <h1 class="heading">our courses</h1>
<div class="box-container">
    @foreach(var course in Model){
                <div class="box">
                    <div class="info">
                        <h3>@course.CourseDescription</h3>
                    </div>
                    <table class="table table-striped">
                        <tr>
                            <td>
                                Course Code : @course.CourseCode

                            </td>
                            <td>
                                Course Major : @course.Major

                            </td>
                        </tr>
                        <tr>
                            <td>
                                Numbero Of Credits : @course.NumberOfCredits

                            </td>
                            <td>
                                Number Of Hours : @course.NumberOfHours

                            </td>
                        </tr>
                        <tr>
                            <td>
                                TP : @course.TP
                            </td>
                            <td>
                                TD : @course.TD
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Total hours : @course.TotalNumberOfHours
                            </td>
                            <td>
                                Semester : @course.Semester
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Course State : @course.CourseState
                            </td>

                            <td>
                                Obligatory : @course.Obligatory
                            </td>
                        </tr>
                    </table>
                    <div class="flex-btn">
                        <a asp-controller="Course" asp-action="Edit" asp-route-CourseCode="@course.CourseCode" class="inline-option-btn">edit</a>
                        <a class="inline-delete-btn" onclick="confirmDelete('@course.CourseCode')">delete</a>
                        <a class="inline-btn">Active</a>
                    </div>
                </div>
}
    
            </div>
            </section>
    
}
else{
    <h1>No course</h1>
}

@section Scripts {
    <script>
        function confirmDelete(courseCode) {
            Swal.fire({
                title: "Are you sure you want to delete this course?",
                text: "This action cannot be undone.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    // If user confirms, perform the delete action
                    window.location.href = "Course/Delete?CourseCode=" + courseCode;
                } else {
                    // If user cancels, show an informational message
                    Swal.fire("Deletion cancelled", "", "info");
                }
            });
        }
    </script>
}