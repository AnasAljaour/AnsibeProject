@using AnsibeProject.Models;
@model List<Course>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<section class="courses">
    <h1 class="heading">our courses</h1>
    <div class="box-container">
     <div class="box">
    
  
   
            <a asp-controller="Course" asp-action="Add" class="inline-btn">add</a>

        @if (Model != null && Model.Count() > 0)
        {

                <table class="table table-striped" id="myTable">
            <thead>
                <tr>
                            <th data-searchable="true">Course Code</th>
                            <th data-searchable="true">Course Description</th>
                            <th data-searchable="true">Course Major</th>
                            <th data-searchable="true">Numbero Of Credits </th>
                            <th data-searchable="true">Number Of Hours</th>
                            <th data-searchable="true">TP</th>
                            <th data-searchable="true">TD</th>
                            <th data-searchable="true">Total hours</th>
                            <th data-searchable="true">Semester</th>
                            <th data-searchable="true">Course State</th>
                            <th data-searchable="true">Obligatory </th>
                            <th data-searchable="true">Edit</th>
                            <th data-searchable="true">Deactivate</th>
                            <th data-searchable="true">Delete</th>
                </tr>
                    </thead>
                    <tbody>
           @foreach (var course in Model)
            {
                if (course.CourseState.Equals(ActiveState.Active))
                {
                
                        
                            
                            <tr>
                            <td>
                                @course.CourseCode
                                </td>
                            <td>@course.CourseDescription</td>
                                <td>
                                    @course.Major
                                </td>
                                <td>
                                   @course.NumberOfCredits
                                </td>
                            
                         
                                <td>
                                      @course.NumberOfHours
                                </td>
                                <td>
                                     @course.TP
                                </td>
                            
                                <td>
                                  @course.TD
                                </td>
                                <td>
                                     @course.TotalNumberOfHours
                                </td>
                            
                                <td>
                                    @course.Semester
                                </td>
                                <td>
                                     @course.CourseState
                                </td>
                            
                                <td>
                                     @course.Obligatory
                                </td>
                        <td>
                            <a asp-controller="Course" asp-action="Edit" asp-route-CourseCode="@course.CourseCode" class="inline-btn">edit</a>
                        </td>
                        <td>
                            <a class="inline-btn" id="toggle-btn" asp-controller="Course" asp-action="ChangeState" asp-route-CourseCode="@course.CourseCode" asp-route-CourseState=@ActiveState.NotActive>Deactivate</a>
                        </td>
                        <td>
                            <a class="inline-delete-btn" onclick="confirmDelete('@course.CourseCode')">delete</a>
                        </td>



                            </tr>
                    
                        
                      
                            
                        
                   
                }
                else
                {
                     <tr>
                            <td>
                                @course.CourseCode
                                </td>
                            <td>@course.CourseDescription</td>
                                <td>
                                    @course.Major
                                </td>
                                <td>
                                   @course.NumberOfCredits
                                </td>
                            
                         
                                <td>
                                      @course.NumberOfHours
                                </td>
                                <td>
                                     @course.TP
                                </td>
                            
                                <td>
                                  @course.TD
                                </td>
                                <td>
                                     @course.TotalNumberOfHours
                                </td>
                            
                                <td>
                                    @course.Semester
                                </td>
                                <td>
                                     @course.CourseState
                                </td>
                            
                                <td>
                                     @course.Obligatory
                                </td>
                        <td>
                            <a asp-controller="Course" asp-action="Edit" asp-route-CourseCode="@course.CourseCode" class="inline-btn">edit</a>
                        </td>
                        <td>
                            <a class="inline-btn" id="toggle-btn" asp-controller="Course" asp-action="ChangeState" asp-route-CourseCode="@course.CourseCode" asp-route-CourseState=@ActiveState.Active>Activate</a>
                        </td>
                        <td>
                            <a class="inline-delete-btn" onclick="confirmDelete('@course.CourseCode')">delete</a>
                        </td>

                     </tr>
                }
            }




                    </tbody>
        </table>
    }
    </div>
    </div>
</section>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
        function toggleState(courseCode) {
            let body = document.getElementById(courseCode);
            body.classList.toggle('unactive');
        }
        function confirmDelete(courseCode) {
            Swal.fire({
                title: "Are you sure you want to delete this course?",
                text: "This action cannot be undone.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    // If user confirms, perform the delete action
                    window.location.href = "Course/Delete?CourseCode=" + courseCode;
                } else {
                    // If user cancels, show an informational message
                    Swal.fire("Deletion cancelled", "", "info");
                }
            });
        }
    </script>
}